

@{
    ViewData["Title"] = "Movie Ratings";
}
@using CoderGirl_MVCMovies.Models

<h1>Movie Ratings</h1>

    <a asp-controller="MovieRating" asp-action="Create">Rate A Movie</a> 

    @if (ViewBag.MoviesDictionary.Count == 0)
    {
        <p>Movie Name Dictionary is empty</p>
    }
    else
    {
        <table>
            <tr>
                <th>Movie Name Dictionary</th>
            </tr>
            <tr>
                <th>Movie Name</th>
                <th>Movie Rating</th>
            </tr>
            @foreach (var movie in ViewBag.MoviesDictionary)
            {
                    <tr id=@movie.Key>
                        <td>@movie.Value</td>
                    </tr>
            }
        </table>
    }


