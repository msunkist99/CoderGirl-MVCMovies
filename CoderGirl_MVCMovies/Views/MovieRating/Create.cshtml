@model CoderGirl_MVCMovies.Models.MovieRating

@{
    ViewData["Title"] = "Rate Title";
}

<h1>Rate A Movie</h1>

<form method='post'>
    <select asp-for="Movie">
        @foreach (var name in ViewBag.MovieNames)
        {
            <option>@name</option>
        }
    </select>
    <select asp-for="Rating">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
    </select>
    <button type='submit'>Rate Movie</button>
</form>


