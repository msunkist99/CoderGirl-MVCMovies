@model CoderGirl_MVCMovies.Models.MovieRating

@{
    ViewData["Title"] = "CreateUsingModels2";
}

<h1>CreateUsingModels2</h1>

<h4>MovieRating</h4>
<hr />

<div class="row">
    <div class="col-md-4">

        <form asp-action="CreateUsingModels2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MovieName" class="control-label">@ViewBag.Movie.Name</label>
                <input asp-for="MovieName" class="form-control" value=@ViewBag.Movie.Name hidden="hidden"/>
                <span asp-validation-for="MovieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <select asp-for="Rating">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieId" class="control-label" hidden="hidden"></label>
                <input asp-for="MovieId" class="form-control" value=@ViewBag.Movie.Id hidden="hidden"/>
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Rate Movie" class="btn btn-primary">Rate Movie</button> />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

